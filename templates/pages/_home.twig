{% extends "layouts/_main" %}

{% block container %}
    {% if searchInput %}

        {% for entry in craft.entries
            .section('')
            .search(searchInput)
            .all()
        %}
            <a href="{{ entry.url }}">{{ entry.title }}</a>
        {% endfor %}
    {% else %}
        {% include "components/_img" with {
            asset: entry.image.one()
        } %}

        <img
            srcset="https://picsum.photos/id/2/400/400 400w, https://picsum.photos/id/2/756/756 756w, https://picsum.photos/id/2/1000/1000 401w"
            sizes="(max-width: 400px) 400px, (max-width: 756px) 756px, 401px"
            src="https://picsum.photos/id/1/400/400"
        />

        <img
            srcset="https://picsum.photos/id/2/400/400, https://picsum.photos/id/2/600/600 1.5x, https://picsum.photos/id/2/800/800 2x"
            src="https://picsum.photos/id/1/400/400"
        />

        <picture>
            <source media="(max-width: 400px)" srcset="https://picsum.photos/id/2/400/400" />
            <source media="(max-width: 756px)" srcset="https://picsum.photos/id/3/756/756" />

            <img src="https://picsum.photos/id/1/400/400"/>

            <figcaption>
                Laptop op tafel
            </figcaption>
        </picture>
    {% endif %}
{% endblock %}